{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.2/.schema/devbox.schema.json",
  "packages": [
    "path:flakes/androidsdk",
    "maestro@latest",
    "nodejs@latest",
    "jdk17@latest",
    "supabase-cli@latest"
  ],
  "shell": {
    "scripts": {
      "integration_test_android": [
        "../../scripts/integration_test_android.sh build_preview.apk"
      ],
      "integration_test_android_production": [
        "../../scripts/integration_test_android.sh build_production.apk"
      ],
      "sync_devbox": ["bash ../../scripts/sync-devbox.sh"]
    }
