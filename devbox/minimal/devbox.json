{
	"$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.2/.schema/devbox.schema.json",
	"packages": [
		"nodejs@latest",
		"chromium@latest",
		"chromedriver@latest",
		"firebase-tools@latest",
		"supabase-cli@latest",
		"maestro@latest",
		"jdk17@latest"
	],
	"shell": {
		"scripts": {
			"test": [
				"../../scripts/test.sh"
			],
			"collect_coverage": [
				"../../scripts/collect-coverage.sh"
			],
			"integration_test_chrome": [
				"../../scripts/integration_test_chrome.sh"
			],
			"build_web": [
				"cd ../.. && npm run build_web"
			]
		}
	},
	"env": {
		"EXPO_PUBLIC_USE_SUPABASE": "false",
		"USE_SUPABASE_DATA": "false"
	}
}
