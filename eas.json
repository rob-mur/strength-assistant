{
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
      // No environment variables - uses local .env and devbox configs
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
      // No environment variables - CI will set them per test platform
    },
    "production": {
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "applicationId": "com.jimmy_solutions.strength_assistant"
      },
      "environment": "production",
      "env": {
        "NODE_ENV": "production",
        "EXPO_PUBLIC_USE_SUPABASE": "true",
        "EXPO_PUBLIC_USE_EMULATOR": "false",
        "EXPO_PUBLIC_USE_SUPABASE_EMULATOR": "false",
        "USE_SUPABASE_DATA": "true"
      }
      // Production uses actual Supabase endpoints via EAS secrets
      // EXPO_PUBLIC_SUPABASE_URL and EXPO_PUBLIC_SUPABASE_ANON_KEY
      // must be configured in EAS secrets for production environment
    }
  }
}
