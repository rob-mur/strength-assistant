name: Integration Tests Chrome

on:
  pull_request:
    branches: [main]
  workflow_dispatch:

env:
  EXPO_TOKEN: ${{ secrets.EXPO_TOKEN }}

jobs:
  integration-tests-chrome:
    runs-on: ubuntu-latest
    environment: Dev
    steps:
      - name: ðŸ— Checkout repository
        uses: actions/checkout@v4

      - name: Populate config for build
        env:
          FIREBASE_CONFIG: ${{ secrets.FIREBASE_WEB_CONFIG }}
          GOOGLE_CONFIG: "${{ secrets.GOOGLE_SERVICES }}"
        run: |
          echo  "$GOOGLE_CONFIG" > google-services.json
          echo "$FIREBASE_CONFIG" > firebase.web.config.json

      - name: Install devbox
        uses: jetify-com/devbox-install-action@v0.11.0
        with:
          devbox-version: 0.14.2
          enable-cache: true

      - name: ðŸ“¦ Get npm cache directory path
        id: npm-cache-dir-path
        run: echo "dir=$(devbox run -- npm config get cache)" >> $GITHUB_OUTPUT

      - name: ðŸ“¦ Setup npm cache
        uses: actions/cache@v3
        with:
          path: ${{ steps.npm-cache-dir-path.outputs.dir }}
          key: ${{ runner.os }}-npm-${{ hashFiles('**/package.json') }}
          restore-keys: |
            ${{ runner.os }}-npm-

      - name: ðŸ“¦ Install dependencies
        run: npm install

      - name: ðŸ§ª Run Chrome integration tests
        run: devbox run integration_test_chrome

      - name: Upload debug artifacts
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: maestro-chrome-debug-artifacts
          path: |
            maestro-debug-output/
            *.png
          retention-days: 7