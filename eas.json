{
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
      // No environment variables - uses local .env and devbox configs
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
      // No environment variables - CI will set them per test platform
    },
    "production": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "environment": "production"
      // Only production uses EAS environment variables
    }
  }
}
